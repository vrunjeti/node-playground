    "debug-test": "npm test -- --inspect-brk"
  },
  "author": "Varun Munjeti",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "chai": "^4.1.2",
    "mocha": "^4.0.1"
  }
}
