{
  "name": "node-playground",
  "version": "1.0.0",
  "description": "playground with babel, mocha, chai",
  "main": "index.js",
  "scripts": {
    "build": "babel src -d dist --source-maps inline",
    "start": "node ./dist/index.js",
    "test": "mocha ./dist/*spec.js",
